<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- Semi-transparent black shadow color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:color="#CCCCCC" android:width="1dp" /> <!-- Light gray border -->
        </shape>
    </item>

</layer-list>
