<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3D3D3D3" /> <!-- Light gray shadow color with transparency -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:top="2dp" android:bottom="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
