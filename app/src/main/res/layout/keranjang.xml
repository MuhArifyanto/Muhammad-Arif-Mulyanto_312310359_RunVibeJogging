<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Keranjang"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- Cart Items Container -->
    <LinearLayout
        android:id="@+id/cartItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- First Item -->
        <androidx.cardview.widget.CardView
            android:id="@+id/firstItemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:id="@+id/firstItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firstItemImage"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:background="#F0F0F0"
                    android:src="@drawable/didas1"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/firstItemDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firstItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adidas Duramo SL"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/firstItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp540.000"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/firstItemSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size: 42"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:id="@+id/firstItemActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvFirstItemQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:text="1"
                            android:textColor="#000000" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second Item -->
        <androidx.cardview.widget.CardView
            android:id="@+id/secondItemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp">

            <LinearLayout
                android:id="@+id/secondItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/secondItemImage"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:background="#F0F0F0"
                    android:src="@drawable/hijau"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/secondItemDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/secondItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nike Air Max"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/secondItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp500.000"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/secondItemSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size: 42"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:id="@+id/secondItemActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tvSecondItemQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:text="1"
                            android:textColor="#000000" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Bottom Button -->
    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/teal_200"
        android:text="Beli Sekarang"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp" />

</LinearLayout>
