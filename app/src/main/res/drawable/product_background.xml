<!-- res/drawable/product_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Menentukan background berbentuk kotak -->
    <solid android:color="#D9D9D9" />

    <!-- Menentukan border jika diperlukan -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Ganti #CCCCCC dengan warna border yang diinginkan -->

    <!-- Menentukan ukuran sudut (0dp agar tetap kotak) -->
    <corners android:radius="0dp" />

    <!-- Tentukan padding jika diperlukan -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
